<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab"
            android:text="To reset password, enter your email, press the button and check the mail to follow instructions."
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"


            android:textStyle="normal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/emailresetField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_slab"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#303F9F"
            android:textSize="20sp"
            android:textStyle="normal"
            app:met_baseColor="#070707"
            app:met_errorColor="#ddaa00"
            app:met_floatingLabel="normal"
            app:met_minCharacters="5"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true" />




    </LinearLayout>

</androidx.cardview.widget.CardView>
