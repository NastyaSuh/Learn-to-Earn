<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#2ECC71"/>
    <ImageButton
        android:id="@+id/userAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/user1"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/userName"
        android:layout_width="223dp"
        android:layout_height="34dp"
        style="@style/btn"
        android:textSize="20sp"
        android:text="#Имя Пользователя"
        android:textColor="@android:color/black"
        android:layout_marginStart="147dp"
        android:layout_marginTop="31dp"
        />
    <Button
        android:layout_width="156dp"
        android:layout_height="15dp"
        style="@style/btn"
        android:text="редактировать профиль"
        android:layout_alignStart="@+id/userName"
        android:layout_below="@+id/userName"
        android:textColor="#6B6565"
        android:layout_marginStart="29dp"
        android:layout_marginTop="4dp"/>
    <ImageButton
        android:id="@+id/theory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/theory"
        android:background="@null"
        android:layout_below="@id/header"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        />
    <ImageButton
        android:id="@+id/practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_toEndOf="@id/theory"
        android:src="@drawable/practice"
        android:layout_alignTop="@id/theory"
        android:layout_marginLeft="70dp"
        />
    <ImageButton
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/theory"
        android:layout_below="@+id/theory"
        android:src="@drawable/stats"
        android:background="@null"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/stats"
        android:src="@drawable/forum"
        android:background="@null"
        android:layout_toEndOf="@id/stats"
        android:layout_marginStart="70dp"/>








</RelativeLayout>